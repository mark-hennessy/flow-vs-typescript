{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "watch": true,
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-test.ts",
    "**/*.spec.ts"
  ]
}
