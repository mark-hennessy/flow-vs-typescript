{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "watch": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-test.ts",
    "**/*.spec.ts"
  ]
}
